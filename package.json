{
  "name": "nabu",
  "version": "2.0.0",
  "description": "File QC DB",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "start:dev": "nodemon app.js",
    "start:prod": "NODE_ENV=production nodejs --abort-on-uncaught-exception app.js",
    "test": "PORT=3001 SQLITE_LOCATION=$(pwd)/test DB_CONNECTION=postgres://test:test@localhost/qcdb_test LOG_LEVEL=test mocha --exit",
    "lint": "eslint .",
    "precommit": "lint-staged",
    "fw:clean": "docker run --rm -v $(pwd)/conf:/flyway/conf -v $(pwd)/sql:/flyway/sql --network=host boxfuse/flyway clean",
    "fw:migrate": "docker run --rm -v $(pwd)/conf:/flyway/conf -v $(pwd)/sql:/flyway/sql --network=host boxfuse/flyway migrate",
    "pretest": ". test/setup_test_dbs.sh"
  },
  "lint-staged": {
    "*.js": [
      "prettier --single-quote --write",
      "eslint --fix .",
      "git add"
    ]
  },
  "repository": {
    "type": "git"
  },
  "author": "Heather Armstrong",
  "license": "MIT",
  "dependencies": {
    "activedirectory2": "^1.2.7",
    "JSONStream": "^1.3.4",
    "body-parser": "1.18.2",
    "compression": "^1.7.2",
    "cors": "2.8.4",
    "dotenv": "4.0.0",
    "express": "4.16.2",
    "helmet": "3.10.0",
    "moment": "^2.22.2",
    "pg-promise": "7.3.2",
    "pg-query-stream": "^1.1.1",
    "prom-client": "10.2.2",
    "serve-favicon": "^2.5.0",
    "sqlite3": "^4.0.2",
    "swagger-ui-express": "2.0.11",
    "uid": "0.0.2",
    "winston": "2.4.0"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-exclude": "^1.0.3",
    "chai-http": "^4.0.0",
    "eslint": "^5.1.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.0",
    "mocha": "^4.0.1",
    "node-cmd": "^3.0.0",
    "nodemon": "^1.12.1",
    "prettier": "^1.11.1",
    "rewire": "^4.0.1"
  }
}

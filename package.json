{
  "name": "qcrecord-db",
  "version": "1.0.0",
  "description": "File QC DB",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "start:dev": "nodemon app.js",
    "test": "SQLITE_LOCATION=${SQLITE_TEST_LOCATION} DB_CONNECTION=postgres://test:test@localhost/qcdb_test LOG_LEVEL=test mocha",
    "lint": "eslint .",
    "fw:clean": "flyway -X -configFile=conf/flyway.conf clean",
    "fw:migrate": "flyway -X -configFile=conf/flyway.conf -locations=filesystem:./sql/ migrate",
    "fw:test-clean": "flyway -configFile=conf/flyway-test-db.conf clean",
    "fw:test-migrate": "flyway -configFile=conf/flyway-test-db.conf -locations=filesystem:./sql/,filesystem:./test/migrations/ migrate"
  },
  "repository": {
    "type": "git"
  },
  "author": "Heather Armstrong",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.18.2",
    "express": "^4.16.2",
    "flywaydb-cli": "^0.5.0",
    "morgan": "^1.9.0",
    "pg-promise": "^7.3.2",
    "prom-client": "^10.2.2",
    "sqlite3": "^3.1.13",
    "swagger-ui-express": "^2.0.11"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-http": "^3.0.0",
    "dotenv": "^4.0.0",
    "eslint": "^4.11.0",
    "mocha": "^4.0.1",
    "node-cmd": "^3.0.0",
    "nodemon": "^1.12.1",
    "rewire": "^3.0.2"
  }
}

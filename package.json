{
  "name": "nabu",
  "version": "1.0.0",
  "description": "File QC DB",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "start:dev": "nodemon app.js",
    "start:prod": "NODE_ENV=production nodejs --abort-on-uncaught-exception app.js",
    "test": "PORT=3001 SQLITE_LOCATION=$(pwd)/test DB_CONNECTION=postgres://test:test@localhost/qcdb_test LOG_LEVEL=test mocha --exit",
    "lint": "eslint .",
    "fw:clean": "node_modules/flywaydb-cli/lib/flyway-4.2.0/flyway -X -configFile=conf/flyway.conf clean",
    "fw:migrate": "node_modules/flywaydb-cli/lib/flyway-4.2.0/flyway -X -configFile=conf/flyway.conf -locations=filesystem:./sql/ migrate",
    "fw:test-clean": "node_modules/flywaydb-cli/lib/flyway-4.2.0/flyway -configFile=conf/flyway-test-db.conf clean",
    "fw:test-migrate": "flyway -configFile=conf/flyway-test-db.conf -locations=filesystem:./sql/,filesystem:./test/migrations/ migrate"
  },
  "repository": {
    "type": "git"
  },
  "author": "Heather Armstrong",
  "license": "MIT",
  "dependencies": {
    "body-parser": "1.18.2",
    "cors": "2.8.4",
    "dotenv": "4.0.0",
    "express": "4.16.2",
    "flywaydb-cli": "0.5.0",
    "helmet": "3.10.0",
    "pg-promise": "7.3.2",
    "prom-client": "10.2.2",
    "sqlite3": "3.1.13",
    "swagger-ui-express": "2.0.11",
    "uid": "0.0.2",
    "winston": "2.4.0"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-exclude": "^1.0.3",
    "chai-http": "^3.0.0",
    "eslint": "^4.12.1",
    "mocha": "^4.0.1",
    "node-cmd": "^3.0.0",
    "nodemon": "^1.12.1",
    "rewire": "^3.0.2"
  }
}

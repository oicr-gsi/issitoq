{
    "env": {
        "browser": true,
        "es6": true
    },
    "plugins": ["promise"],
    "extends": [
        "eslint:recommended",
        "plugin:promise/recommended"
		],
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 8
    },
    "globals": {
        "require": false,
        "module": false,
        "exports": false,
        "process": false,
        "__dirname": false
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "space-before-function-paren": [
            "error",
            "always"
        ],
        "keyword-spacing": [
            "error"
        ],
      	"no-console": "warn",
        "no-var": "error"
    }
}
